@model MVCWebApplication.Models.ResetPasswordViewModel

<div class="form-one">
    @if (TempData["msg"] != null)
    {
        <div class="alert alert-primary" role="alert">@TempData["msg"].ToString()</div>
    }
        
    @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary("", new { @class = "text-danger" })
        @Html.TextBoxFor(m => m.Email, new { @placeholder = "Email" })
        @Html.ValidationMessageFor(m => m.Email)
        @Html.PasswordFor(m => m.Password, new { @placeholder = "Password" })
        @Html.ValidationMessageFor(m => m.Password)
        @Html.PasswordFor(m => m.ConfirmPassword, new { @placeholder = "Repetir Password" })
        @Html.ValidationMessageFor(m => m.ConfirmPassword)
        <button type="submit" class="btn btn-primary">Actualizar</button>
    }
</div>