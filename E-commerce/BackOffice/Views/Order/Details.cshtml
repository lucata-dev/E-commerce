@model Ecommerce.Domain.Entities.Order

@{
    ViewBag.Title = "Detalle";

    var selectList = new SelectList(ViewBag.States, "Id", "Name", Model.StateId);
}

<h2>Detalle</h2>

<h4>Orden de compra: @Model.Id</h4>

<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Categoría</th>
            <th>Descripción</th>
            <th>Precio</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Products)
        {
        <tr>
            <td>@item.Name</td>
            <td>@item.Category.Name</td>
            <td>@item.Description</td>
            <td>@item.UnitPrice</td>
        </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="3" class="text-right">
                <strong>Total</strong>
            </td>
            <td>
                
                @Model.TotalPrice
            </td>
        </tr>
    </tfoot>
</table>

<h4>Estado de la orden</h4>
<div class="form-inline">
    <div class="form-group">
        @Html.DropDownList("States", selectList, new { @class = "form-control"})
    </div>
    <button class="btn btn-primary" disabled>Cambiar </button>
</div>
